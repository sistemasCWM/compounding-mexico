<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estafeta_deleivery_method_configuration" model="ir.ui.view">
        <field name="name">delivery.carrier.configuration</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Estafeta Configuration" name="estafeta_configuration"
                      attrs="{'invisible': [('delivery_type', '!=', 'estafeta')]}">
                    <group>
                        <group>
                            <field name="service_code"
                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}"/>
<!--                            <field name="estafeta_number_of_labels"-->
<!--                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}"/>-->
                            <field name="deliver_to_estafeta_office"
                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}"/>
                            <field name="estafeat_parcel_type_id"
                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}"/>
                            <field name="estafeat_return_documnet"
                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}"/>
                            <field name="estafeta_paper_type"
                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}" />
                            <field name="estafeta_packaging_id"
                                   attrs="{'required': [('delivery_type', '=', 'estafeta')]}"/>

                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>