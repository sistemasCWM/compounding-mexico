<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estafeta_credential_configuration" model="ir.ui.view">
        <field name="name">Estafeta Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Estafeta Configuration">
                    <group>
                        <field name="use_estafeta_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_estafeta_shipping_provider', '!=', True)]}">
                        <field name="estafeta_api_url"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_username"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_password"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_office_number"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_suscriberId"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_customer_number"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_rate_api_username"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                        <field name="estafeta_rate_api_password"
                               attrs="{'required':[('use_estafeta_shipping_provider','=',True)]}"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>